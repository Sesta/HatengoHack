{
  "name": "HatengoHack",
  "version": "0.2",
  "manifest_version": 2,
  "description": "すごく面白い拡張",
  "permissions": [ "http://210.140.71.3:8080/" ],
  "browser_action": {
    "default_icon": "images/batloika.png",
    "default_title": "Batloika"
  },
  "web_accessible_resources": [
      "images/*.png"
  ],
  "background": {
    "scripts": [
      "extension_click_listener.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [ "http://b.hatena.ne.jp/*" ],
      "js": [
        "lib/jquery.min.js",
        "lib/d3.min.js",
        "liquidFillGauge.js",
        "main.js"
      ],
      "run_at": "document_start"
    }
  ],
  "icons": {
    "128": "images/batloika.png"
  }
}
